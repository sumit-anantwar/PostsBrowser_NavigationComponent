<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">

    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LabelWhite">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PostsListError" parent="LabelWhite">
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/amaranth</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="EditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_rect_background_white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="TextViewPostId">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/oval_background_white</item>
    </style>

    <style name="PostCellId" parent="TextViewPostId">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11dp</item>
        <item name="android:background">@drawable/oval_background_primarycolor</item>
    </style>

    <style name="PostTitle">
        <item name="android:gravity">top</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PostCellTitle" parent="PostTitle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewUser">
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PostCellUserId" parent="TextViewUser">
        <item name="android:textColor">@color/black</item>
    </style>



</resources>
